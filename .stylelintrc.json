{
    "extends": [
        "stylelint-config-standard-scss",
        "stylelint-config-rational-order",
        "stylelint-prettier/recommended"
    ],
    "plugins": [
        "stylelint-order",
        "stylelint-scss"
    ],
    "rules": {
        "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
        "scss/dollar-variable-pattern": "^[a-z][a-zA-Z0-9]+$"
    }
}